<h1>
    <%= title %>
</h1>

<%- messages() %>

    <%- console.log(council_id) %>

        <form action="#" method="post">
            <fieldset>
                <legend>Personal Information</legend>
                <label for="user_firstname">First Name:</label>
                <input type="text" id="user_firstname" name="user_firstname" required
                    value="<%= locals.user_firstname %>" placeholder="First Name">

                <label for="user_middlename">Middle Name:</label>
                <input type="text" id="user_middlename" name="user_middlename" required
                    value="<%= locals.user_middlename %>" placeholder="Middle Name">

                <label for="user_lastname">Last Name:</label>
                <input type="text" id="user_lastname" name="user_lastname" required value="<%= locals.user_lastname %>"
                    placeholder="Last Name">

                <label for="user_birthdate">Birthday: </label>
                <input type="date" id="user_birthdate" name="user_birthdate" required>

                <label>Gender: </label>
                <input id="user_gender_male" type="radio" name="user_gender" value="M"> Male
                <input id="user_gender_female" type="radio" name="user_gender" value="F"> Female

                <label for="user_address">Address: </label>
                <input id="user_address" type="text" name="user_address" required>

                <label for="user_mobile_number">Mobile Number: </label>
                <input type="tel" id="user_mobile_number" name="user_mobile_number">

                <label for="user_email">Email:</label>
                <input type="email" id="user_email" name="user_email">
            </fieldset>

            <fieldset>
                <legend>Membership</legend>
                <label for="user_date_recruitment">Date of recruitment:</label>
                <input type="date" id="user_date_recruitment" name="user_date_recruitment" required>

                <fieldset>
                    <legend>Membership Accident Assitance Benefit (MAAB) </legend>
                    <label for="user_maab">Number:</label>
                    <input type="text" id="user_maab" name="user_maab" placeholder="PB12345">

                    <label for="user_validity_date">Validity Date:</label>
                    <input type="date" id="user_validity_date" name="user_validity_date">
                </fieldset>

            </fieldset>

            <fieldset>
                <legend>Emergency Contact</legend>
                <label for="user_emergency_contact_name">Name of Emergency Contact Person:</label>
                <input type="text" id="user_emergency_contact_name" name="user_emergency_contact_name" required>

                <label for="user_emergency_contact_number">Number of Emergency Contact Person:</label>
                <input type="tel" id="user_emergency_contact_number" name="user_emergency_contact_number" required>

                <label for="user_emergency_contact_relationship">Relationship to the Emergency Contact Person:</label>
                <input type="text" id="user_emergency_contact_relationship" name="user_emergency_contact_relationship"
                    required placeholder="Mother">
            </fieldset>

            <input type="submit" value="Register">
        </form>